{
	"name": "twinkle-starter",
	"version": "1.0.0",
	"description": "Template repo for creating Twinkle ",
	"main": "index.js",
	"scripts": {
		"format": "prettier --write .",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"build": "grunt build",
		"quickbuild": "webpack",
		"start": "node server.js",
		"test:prod": "webpack && jest",
		"test": "env DEBUG=true webpack && jest -i",
		"test:unit": "webpack && jest --selectProjects unit",
		"test:integration": "webpack && jest --selectProjects integration",
		"test:integration:setup": "cd tests/integration/docker && bash main.sh",
		"test:integration:teardown": "cd tests/integration/docker && docker-compose down"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/wikimedia-gadgets/twinkle-starter.git"
	},
	"author": "Siddharth VP",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/wikimedia-gadgets/twinkle-starter/issues"
	},
	"homepage": "https://github.com/wikimedia-gadgets/twinkle-starter#readme",
	"dependencies": {
		"tslib": "^1.14.1",
		"twinkle-core": "^3.0.0"
	},
	"devDependencies": {
		"@types/chai": "^4.2.15",
		"@types/chai-as-promised": "^7.1.3",
		"@types/jest": "^26.0.21",
		"@typescript-eslint/eslint-plugin": "^4.11.1",
		"@typescript-eslint/parser": "^4.11.1",
		"chai": "^4.3.4",
		"chai-as-promised": "^7.1.1",
		"eslint": "^7.15.0",
		"fork-ts-checker-webpack-plugin": "^6.0.8",
		"grunt": "^1.3.0",
		"grunt-contrib-clean": "^2.0.0",
		"grunt-contrib-concat": "^1.0.1",
		"grunt-replace": "^1.0.1",
		"grunt-webpack": "^4.0.2",
		"husky": "^4.3.7",
		"jest": "^26.6.3",
		"jest-playwright-preset": "^1.4.7",
		"lint-staged": "^10.5.3",
		"mock-mediawiki": "^1.0.1",
		"mwn": "^0.10.3",
		"playwright": "^1.9.1",
		"prettier": "^2.2.1",
		"ts-jest": "^26.5.2",
		"ts-loader": "^8.0.13",
		"typescript": "^4.1.2",
		"webpack": "^5.11.1",
		"webpack-cli": "^4.3.1",
		"webpack-dev-server": "^3.11.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.ts(x)?": "npm run format"
	}
}
